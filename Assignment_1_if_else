1 Program for to check given number is even or odd.
#include <stdio.h>

int main() {
   int no=139;
   if(no%2==0)
   {
       printf("no is even");
   }
   else{
       printf("no is odd");
   }

    return 0;
}
2 Program for to check given number is pallindrome or not.
#include<stdio.h>
int main()
{
int n=121;
int digit;
int temp = n;
int rev = 0;
while(n > 0)
{
    digit = n % 10;
    rev = rev * 10 + digit;
    n = n / 10;
}

if(temp == rev)
{
    printf("Palindrome");
}
else
{
    printf("Not Palindrome");
}
}
3  Program for to check given year is leap year or not.
#include <stdio.h>

int main()
{
    int year = 2012;
    if (year % 400 == 0)
    {
        printf("Leap Year");
    }
    else if (year % 4 == 0 && year % 100 != 0)
    {
        printf("Leap Year");
    }
    else
    {
        printf("Not Leap Year");
    }
 return 0;
}
4 Program for to check given character is vowel or consonant.
#include <stdio.h>

int main() {
   int ch='z';
    if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u' ||
    ch == 'A' || ch == 'E' || ch == 'I' || ch == 'O' || ch == 'U')
    {
    printf("vowel");
}
else
{
    printf("Consonant");
}
return 0;
}
